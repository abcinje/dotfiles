" Backspace
set backspace=indent,eol,start

" Blanks
set list listchars=tab:»\ ,trail:·

" Color Scheme
colorscheme jellybeans

" Compatibility
set nocompatible

" Indentation
set autoindent
set cindent
set shiftwidth=8
set smartindent
set smarttab
set tabstop=8

" Interface
set background=dark
set laststatus=2
set number
set ruler
set showcmd
set title

" Mouse
set mouse=a

" Search
set hlsearch
set ignorecase
set incsearch
set nowrapscan
set smartcase

" Syntax Highlighting
if has("syntax")
	syntax on
endif
