set encoding=utf-8
set hlsearch
set ignorecase
set incsearch
set list
set listchars=tab:»\ ,trail:·
set mouse=a
set number
set relativenumber
set smartcase
set splitbelow
set splitright
set tags=tags;
set nowrapscan

inoremap jk <Esc>
nnoremap : ;
nnoremap ; :
nnoremap <C-H> <C-W>h
nnoremap <C-J> <C-W>j
nnoremap <C-K> <C-W>k
nnoremap <C-L> <C-W>l
