{
    "editor.fontLigatures": true,
    "editor.lineNumbers": "relative",
    "editor.renderWhitespace": "boundary",
    "editor.wordWrap": "on",

    "terminal.integrated.scrollback": 10000,

    "vim.easymotion": true,
    "vim.hlsearch": true,
    "vim.showcmd": false,
    "vim.wrapscan": false,

    "vim.leader": "<Space>",
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-H>"],
            "after": ["<C-W>", "h"]
        },
        {
            "before": ["<C-J>"],
            "after": ["<C-W>", "j"]
        },
        {
            "before": ["<C-K>"],
            "after": ["<C-W>", "k"]
        },
        {
            "before": ["<C-L>"],
            "after": ["<C-W>", "l"]
        },
        {
            "before": ["<Leader>", "h"],
            "commands": [":nohlsearch"]
        }
    ]
}
